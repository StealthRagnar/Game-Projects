<Application x:Class="Snake_Game_2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Snake_Game_2"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColor">#211E8B</SolidColorBrush>
        <SolidColorBrush x:Key="GridBackgroundColor">#312C70</SolidColorBrush>
        <SolidColorBrush x:Key="GridLineColor">#4F8867</SolidColorBrush>
        <SolidColorBrush x:Key="TextColor">#EBEBBE</SolidColorBrush>
        <SolidColorBrush x:Key="OverlayColor">#7F000000</SolidColorBrush>
        <FontFamily x:Key="MainFont">Assets/#Droid Sans Mono</FontFamily>
    </Application.Resources>
</Application>
